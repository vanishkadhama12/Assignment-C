#include<stdio.h>

int main() {
    int n = 5;

    for (int i = 0; i < n; i++) {
        
        for (int j = 0; j <= i; j++) {
            if (j % 2 == 0) {
                printf("0");
            } 
            else {
                printf("1");
            }
        }

        for (int k = 0; k < 2 * (n - i - 1); k++) {
            printf(" ");
        }

        for (int m= 0; m <= i; m++) {
            if (m % 2 == 0) {
                printf("0");
            } else {
                printf("1");
            }
        }

        printf("\n");
    }

    return 0;
}
